        <script><![CDATA[/*
 Rule fired after an idea is updated to ensure that the submitter user's score is
 updated and an idea.score.changed event is fired to ensure all of the submitter's ideas'
 weights are subsequently updated.
 */
var c = new IdeaScoreCalculator();
var userScore = c.calculateUserScore(current.u_submitter);
	
// First update the user's weight with this updated idea.
var gr = new GlideRecord('u_idea_user_score');
gr.addQuery('u_user',current.u_submitter);
gr.query();
if (gr.next()) {
   gr.u_score = userScore;
   gr.update();
} else {
   gr.u_score = userScore;
   gr.u_user = current.u_submitter;
   gr.insert();
}

// Then, first the event that will update all of the submitters ideas, including this one,
// with an adjusted score.
gs.eventQueue("idea.score.changed", current);
]]></script>
